@using RealEstates.Services.Models
@using RealEstates.Models
@model IEnumerable<RealEstates.Services.Models.DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Welcome to Real Estates BG</h1>
</div>

<table class="table table-striped table-hover table-sm">
    <tr>
        <th>District</th>
        <th>Properties count</th>
        <th>Avg. Price</th>
        <th>Min. Price</th>
        <th>Max. Price</th>
    </tr>

    @foreach (var district in this.Model.Where(x=> x.PropertiesCount > 20))
    {
        <tr>
            <td>@district.Name</td>
            <td>@district.PropertiesCount</td>
            <td>@district.AveragePrice.ToString("0.00")€</td>
            <td>@district.MinPrice.ToString("0.00")€</td>
            <td>@district.MaxPrice.ToString("0.00")€</td>
        </tr>
    }
</table>