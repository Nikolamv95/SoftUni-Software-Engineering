<Window x:Class="NewCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="Box1" HorizontalAlignment="Left" Height="73" Margin="80,144,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" TextChanged="TextBox_TextChanged"/>
        <TextBox Name="Box2" HorizontalAlignment="Left" Height="73" Margin="240,144,0,0" Text="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <TextBox Name="BoxResult" HorizontalAlignment="Left" Height="73" Margin="400,144,0,0" Text="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Button Content="Calculate" HorizontalAlignment="Left" Height="40" Margin="240,264,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click"/>
        <Label Content="+" HorizontalAlignment="Left" Height="35" Margin="180,169,0,0" VerticalAlignment="Top" Width="45"/>
        <Label Content="=" HorizontalAlignment="Left" Height="35" Margin="342,169,0,0" VerticalAlignment="Top" Width="45"/>

    </Grid>
</Window>
